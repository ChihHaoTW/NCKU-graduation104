html
  overflow-x hidden
  max-width 100%

.ui.menu
  position fixed
  z-index 99
  width 100vw

#book
  position relative
  height 100%
  max-width 100vw 

#page_1
  overflow-y visible

#page_2
  left 100vw
  height 100vh
  
#page_3
  background-color #FFF
  left 200vw
  height auto

.grid
  height 100%

#page_2 .grid .row
